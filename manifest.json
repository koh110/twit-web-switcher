{
  "name": "Twit Web Switcher",
  "manifest_version": 2,
  "version": "1.2.2",
  "description": "twitterアカウントの切り替え",
  "icons": {
    "16":"icon16.png",
    "48":"icon48.png",
    "128":"icon128.png"
  },
  "background": {
    "scripts": [
      "js/global.js",
      "js/storage.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://twitter.com/",
    "tabs",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://about.twitter.com/*"
      ],
      "js": [
        "js/lib/jquery.min.js",
        "js/global.js",
        "js/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
