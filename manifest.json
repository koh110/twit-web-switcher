{
    "name":"Twit Web Switcher",
    "manifest_version":2,
    "version":"1.1",
    "icons":{
		"16":"icon16.png",
		"48":"icon48.png",
		"128":"icon128.png"
    },
    "description":"Exchange Twitter account.",
    "background": {
	"scripts":[
	    "jquery/jquery.js",
	    "js/global.js",
	    "js/storage.js",
	    "js/background.js"
	]
    },
    "browser_action":{
		"default_icon":"icon128.png",
		"default_popup":"popup.html"
    },
    "permissions":[
		"https://twitter.com/",
		"tabs",
		"notifications"
    ],
    "content_scripts":[
	{
	    "matches":[
			"https://twitter.com/*"
	    ],
	    "js":[
			"jquery/jquery.js",
			"js/content.js",
			"js/global.js"
	    ],
		"run_at":"document_end"
	}
    ],
    "options_page":"options.html"
}
